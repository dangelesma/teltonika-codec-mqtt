# Environment variables example
# Copy this file to .env and modify values as needed

# MQTT Broker Configuration
mqttOptions__host=localhost
mqttOptions__port=1883
mqttOptions__protocol=mqtt
# For TLS/SSL use: mqtts and port 8883 or your broker's TLS port
# mqttOptions__protocol=mqtts
# mqttOptions__port=8883

# MQTT Authentication (optional)
mqttOptions__username=
mqttOptions__password=
# Set to 'false' to skip TLS certificate verification (not recommended for production)
mqttOptions__rejectUnauthorized=true

# OpenRemote Options
orOpts__realm=master
orOpts__teltonika_keyword=teltonika
orOpts__dataTopic=data
orOpts__commandTopic=commands

# TCP Server Options (Teltonika devices connect here)
udpServerOptions__port=8833

# Web API Configuration
WEB_API_PORT=3000
WEB_API_HOST=0.0.0.0

# ========================================
# SECURITY CONFIGURATION
# ========================================

# API Key Authentication (for REST API)
# Set to 'true' to require API key for protected endpoints
SECURITY_API_KEY_ENABLED=false
# Your API key (auto-generated if not set)
SECURITY_API_KEY=your-secure-api-key-here

# IMEI Whitelist (only allow specific devices)
# Set to 'true' to only accept whitelisted IMEIs
SECURITY_IMEI_WHITELIST_ENABLED=false
# Comma-separated list of allowed IMEIs
SECURITY_IMEI_WHITELIST=353691844288760,353691844288761

# Rate Limiting (protect against abuse)
# Set to 'false' to disable rate limiting
SECURITY_RATE_LIMIT_ENABLED=true
# Time window in milliseconds (default: 60000 = 1 minute)
SECURITY_RATE_LIMIT_WINDOW=60000
# Max requests per window (default: 100)
SECURITY_RATE_LIMIT_MAX=100

# IP Whitelist (restrict access to specific IPs)
# Set to 'true' to only allow whitelisted IPs
SECURITY_IP_WHITELIST_ENABLED=false
# Comma-separated list of allowed IPs
SECURITY_IP_WHITELIST=192.168.1.0/24,10.0.0.1

# Connection Limits
# Max devices allowed from same IP (default: 10)
SECURITY_MAX_DEVICES_PER_IP=10
# Max failed connection attempts before blocking (default: 5)
SECURITY_MAX_CONN_ATTEMPTS=5
# Time window for connection attempts in ms (default: 300000 = 5 min)
SECURITY_CONN_ATTEMPT_WINDOW=300000
